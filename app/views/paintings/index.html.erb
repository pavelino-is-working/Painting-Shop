<p id="notice"><%= notice %></p>

<div class="container">
  <br>
  <br>
<table class="table is-bordered is-striped is-fullwidth">
  <thead>
    <tr>
      <th></th>
      <th>Name painting</th>
      <th>Type</th>
      <th>Dominant color</th>
      <th>Price</th>
      <th>Dimensions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paintings.each do |painting| %>
    <% if painting.user == current_user%>
      <tr>
        <td >
          <figure class="image is-9x16" style="width: 5rem;">
              <img src="https://bulma.io/images/placeholders/360x640.png" alt="Placeholder image">
          </figure></td>
        <td><%=link_to painting.name_painting, painting %></td>
        <td><%= painting.painting_type %></td>
        <td><%= painting.dominant_color %></td>
        <td><%= painting.price %></td>
        <td><%= painting.width %> X <%= painting.height %></td>
        <td><%= link_to 'Edit', edit_painting_path(painting), class:"button is-info" %></td>
        <td><%= link_to 'Destroy', painting, method: :delete, data: { confirm: 'Are you sure?' },class:"button is-danger" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Painting', new_painting_path, class:"button" %>
</div>