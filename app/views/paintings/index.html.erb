<p id="notice"><%= notice %></p>

<h1>Paintings</h1>

<table>
  <thead>
    <tr>
      <th>Id painting</th>
      <th>Name painting</th>
      <th>Img root</th>
      <th>Type</th>
      <th>Dominant color</th>
      <th>Price</th>
      <th>Height</th>
      <th>Width</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paintings.each do |painting| %>
      <tr>
        <td><%= painting.id_painting %></td>
        <td><%= painting.name_painting %></td>
        <td><%= painting.img_root %></td>
        <td><%= painting.type %></td>
        <td><%= painting.dominant_color %></td>
        <td><%= painting.price %></td>
        <td><%= painting.height %></td>
        <td><%= painting.width %></td>
        <td><%= link_to 'Show', painting %></td>
        <td><%= link_to 'Edit', edit_painting_path(painting) %></td>
        <td><%= link_to 'Destroy', painting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

