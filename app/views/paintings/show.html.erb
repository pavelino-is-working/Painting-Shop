
  <div class="container">
    <div class="box">
    <div class="columns">

      <div class="column is-quarter"  >

        <div class="card"style="width: 15rem;">
          <div class="card-image" >
            <figure class="image is-3by4" >
              <%= image_tag @painting.image.url(:thumb) %> 
            </figure>
          </div>

          <div class="content" >
           <p class="title"><%= @painting.user.username %></p>
          </div>
        </div>

      </div>

      <div class="column is-half">
        
          <p class="title"><%= @painting.name_painting %></p>
          <p>Type: <%= @painting.painting_type %></p>
          <p>Dominant Color: <%= @painting.dominant_color %></p>
          <p>Dimensions: <%= @painting.width %> X <%= @painting.height%></p>
      
      </div>

       <div class="column is-quarter">
        
          <p class="title is-2">Price: <%= @painting.price %> </p>
          <% if @painting.user != current_user%>
          <%= link_to 'Buy',  buy_painting_path(@painting), class:"button is-info" %>
          <% else %>
          <button class="button is-info">Promote</button>
          <% end %>
        </div>
      
  </div>
</div>
</div>
