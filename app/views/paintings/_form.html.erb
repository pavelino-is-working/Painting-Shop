
<%= simple_form_for(@painting) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="box">
      <div class="field"><%= f.input :name_painting, label: "Name Painting", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>

    <div class="control">
              <label class="label">Types</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :painting_type, collection: Painting::PAINTING_TYPE, prompt: "Select type" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-tag"></i>
                </span>
              </div>
      <br>
    <div class="field"><%= f.input :dominant_color, label: "Dominant Color", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.input :price, label: "Price", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.input :height, label: "Height", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.input :width, label: "Width", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.hidden_field :user_id, :value => current_user.id   %>  </div> 
    
    <div class="field">
          
            <label class="label">Add images</label>
              <div class="file">
                <label class="file-label">
                  <%= f.input :image, as: :file, input_html: { class:"file-input paintings-image" }, label: false, wrapper: false %>
                    <span class="file-cta">
                      <span class="file-label">Choose a fileâ€¦</span>
                    </span>
                </label>
              </div>
          </div>

  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
