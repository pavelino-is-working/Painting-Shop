
<%= simple_form_for(@painting) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="box">
    <div class="field"><%= f.input :id_painting, label: "Id Painting", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.input :name_painting, label: "Name Painting", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.input :img_root, label: "Image Root", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.input :painting_type, label: "Painting Type", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.input :dominant_color, label: "Dominant Color", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.input :price, label: "Price", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.input :height, label: "Height", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>
    <div class="field"><%= f.input :width, label: "Width", input_html:{class: "text"}, wrapper: false, label_html: {class: "label"} %>  </div>

    
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
