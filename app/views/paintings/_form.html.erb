
<%= simple_form_for(@painting) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :id_painting %>
    <%= f.input :name_painting %>
    <%= f.input :img_root %>
    <%= f.input :type %>
    <%= f.input :dominant_color %>
    <%= f.input :price %>
    <%= f.input :height %>
    <%= f.input :width %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
